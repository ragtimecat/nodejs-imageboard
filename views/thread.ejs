<%- include('./partials/head.ejs') %>

<body>
  <%- include('./partials/nav.ejs') %>
  <div class="content">
    <h1>Welcome to the <%= thread.name %> <a href="#" id="reply">Reply</a></h1>
    <div id="message-div">
      <div id="error-message">Message</div>
      <div id="message-divheader">
        <div>Send Message</div>
        <div class="close-message">&times</div>
      </div>
      <form class="message" action="/message/create" method="POST">
        <textarea placeholder="Don't be shy, express yourself..." name="message" id="message" cols="30"
          rows="10"></textarea>
        <input type="hidden" name="thread" value="<%= thread._id %>">
        <input type="submit" value="Send">
      </form>
    </div>
    <div id="messages">
      <% thread.messages.forEach(message => { %>
      <div class="message-box">
        <div class="message-data" id="<%= message._id %>">Date: <%= message.createdAt %><button class="delete-message">
            &times
          </button>
        </div>
        <p><%= message.text %></p>
      </div>
      <% }) %>
    </div>

  </div>
  <script type="text/javascript" src="/js/popup.js"></script>
</body>


<% - include('./partials/footer.ejs') %>