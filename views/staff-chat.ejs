<%- include('./partials/chat-head.ejs') %>

<body>
  <%- include('./partials/admin-nav.ejs') %>
  <div class="chat-container">
    <header class="chat-header">
      <h1 class="room-name"><%= defaultRoom %></h1>
      <h3 class="username"><%= user.name %> <%= user.surname %></h3>
    </header>
    <main class="chat-main">
      <div class="chat-sidebar">

        <div class="title">
          <h3>Rooms</h3><i class="fas fa-plus-square add-new-room"></i>
        </div>
        <div class="rooms">
          <% rooms.forEach(room => { %>
          <div class="room">
            <% if (room.name === defaultRoom) { %>
            <input type="radio" name="room" id="<%= room.name %>" checked>
            <% } else { %>
            <input type="radio" name="room" id="<%= room.name %>">
            <% } %>
            <label for="<%= room.name %>"><%= room.name %></label>
          </div>
          <% }) %>
        </div>

      </div>
      <div class="chat-messages"></div>
      <div class="users-sidebar">
        <h3>
          <div class="online"></div> Users Online
        </h3>
        <ul class="users-online">

        </ul>
        <h3>
          <div class="offline"></div> Users Offline
        </h3>
        <ul class="users-offline">
          <li>
            <div class="offline"></div>Max
          </li>
          <li>
            <div class="offline"></div>Willie
          </li>
          <li>
            <div class="offline"></div>Willie
          </li>


        </ul>
      </div>
    </main>
    <div class="chat-form-container">
      <form id="chat-form">
        <input type="text" id="msg" placeholder="Message" required autocomplete="off" />
        <input class="btn" type="submit" value="Submit">
      </form>
    </div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/frontendChat.js"></script>
  <script src="https://kit.fontawesome.com/94f3303eef.js" crossorigin="anonymous"></script>

</body>