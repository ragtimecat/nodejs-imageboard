<%- include('./partials/chat-head.ejs') %>

<body>
  <%- include('./partials/admin-nav.ejs') %>
  <div class="chat-container">
    <header class="chat-header">
      <h1>Chat Name</h1>
      <select name="select-chat" id="select-chat">
        <option value="general">General</option>
        <option value="improvements">Improvements</option>
        <option value="problems">Problems</option>
      </select>
    </header>
    <main class="chat-main">
      <div class="chat-sidebar">
        <h3>
          <div class="online"></div> Users Online
        </h3>
        <ul class="users-online">
          <li>
            <div class="online"></div>Peter
          </li>
          <li>
            <div class="online"></div>Jamie
          </li>
        </ul>
        <h3>
          <div class="offline"></div> Users Offline
        </h3>
        <ul class="users-offline">
          <li>
            <div class="offline"></div>Max
          </li>
          <li>
            <div class="offline"></div>Willie
          </li>
          <li>
            <div class="offline"></div>Willie
          </li>
          <li>
            <div class="offline"></div>Willie
          </li>
          <li>
            <div class="offline"></div>Willie
          </li>
        </ul>
      </div>
      <div class="chat-messages">

      </div>
    </main>
    <div class="chat-form-container">
      <form id="chat-form">
        <input type="text" name="name" id="name" placeholder="Name">
        <input type="text" id="msg" placeholder="Message" required autocomplete="off" />
        <input class="btn" type="submit" value="Submit">
      </form>
    </div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/frontendChat.js"></script>

</body>